{
  "kind": "singleType",
  "collectionName": "globals",
  "info": {
    "name": "Global"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "site_name": {
      "type": "string",
      "required": true
    },
    "site_url": {
      "type": "string",
      "regex": "^(http|https)://",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "social_urls": {
      "type": "component",
      "repeatable": false,
      "component": "global.main-social-urls"
    }
  }
}
